<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Шифрование" Height="400" Width="500">
    <Grid>
        <Label Content="Выберите алгоритм:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <ComboBox Name="AlgorithmComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0" Width="200" SelectionChanged="AlgorithmComboBox_SelectionChanged"/>

        <Label Content="Введите текст:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <TextBox Name="InputTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0" Width="460" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

        <Button Name="EncryptButton" Content="Зашифровать" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,160,0,0" Width="100" Click="EncryptButton_Click"/>

        <Label Content="Результат:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,200,0,0"/>
        <TextBox Name="ResultTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,220,0,0" Width="460" Height="60" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"/>
    </Grid>
</Window>